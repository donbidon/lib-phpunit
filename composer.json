{
    "name": "donbidon/lib-phpunit",
    "type": "library",
    "description": "PHPUnit extension",
    "keywords": ["testing", "php", "phpunit"],
    "license": "MIT",
    "authors": [
        {
            "name":     "donbidon",
            "homepage": "http://donbidon.rf.gd/",
            "role":     "lead"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable":      true,
    "support": {
        "issues": "https://github.com/donbidon/lib-phpunit/issues"
    },
    "require": {
        "php": "^7.2",
        "phpunit/phpunit" : "^8"
    },
    "autoload": {
        "psr-4": {
            "donbidon\\Lib\\PHPUnit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
             "donbidon\\Lib\\PHPUnit\\":  ["tests", "tests/src"]
         }
    }
}
